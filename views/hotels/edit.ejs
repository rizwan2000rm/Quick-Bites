<%- include ('../partials/header') %>

<div class="row">
  <h1 style="text-align: center;">Edits <%= hotel.name %></h1>
  <div style="width: 30%; margin: 25px auto;">
    <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          value="<%= hotel.name %>"
          name="hotel[name]"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="number"
          value="<%= hotel.price%>"
          name="hotel[price]"
          min="0.01"
          step="0.01"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          value="<%= hotel.image %>"
          name="hotel[img]"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          value="<%= hotel.description %>"
          name="hotel[description]"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          value="<%= hotel.location %>"
          name="hotel[location]"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
    <a href="/hotels">Go Back</a>
  </div>
</div>

<%- include ('../partials/footer') %>
